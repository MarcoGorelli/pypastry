#!/usr/bin/env python
import sys

import tomlkit

from pypastry import run_experiment, print_results

sys.path.append('.')

if __name__ == "__main__":
    if len(sys.argv) > 1 and sys.argv[1] == "list":
        print_results()
    else:
        with open('pypastry.toml') as toml_file:
            toml_config = tomlkit.loads(toml_file.read())
            run_experiment(toml_config)
